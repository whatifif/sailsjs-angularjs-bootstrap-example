<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading clearfix">
                    <h1 class="panel-title">Login</h1>
                </div>
                <div class="panel-body">
                    <% if(message !=''){%>
                    <div class="alert alert-danger"><%- message %></div>
                    <% } %>    
                    <div class="col-sm-offset-2 col-sm-10">
                        <p><em class="text-muted">test / test123</em></p>
                    </div>
                    <form role="form" action="/login" method="post" class="form-horizontal">
                        <div class="form-group">
                            <label for="loginUsername" class="col-sm-2 control-label">Username</label>
                            <div class="col-sm-10">
                                <input type="text" id="loginUsername" name="username" placeholder="Username" value="" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="loginPassword" class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-10">
                                <input type="password" id="loginPassword" name="password" placeholder="Password" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Sign in</button>
                            </div>
                            <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>